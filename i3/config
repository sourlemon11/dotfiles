# exit i3 (logs you out of your X session)
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (Shift+r) reboot, (Shift+s) shutdown
mode "$mode_system" {
  #bindsym l exec --no-startup-id light-locker-command -l, mode "default"
  bindsym l exec --no-startup-id ~/.local/bin/i3exit lock, exec kill $(pgrep i3-nagbar);mode "default"
  bindsym e exec --no-startup-id ~/.local/bin/i3exit logout, exec kill $(pgrep i3-nagbar);mode "default"
  bindsym s exec --no-startup-id ~/.local/bin/i3exit suspend, exec kill $(pgrep i3-nagbar);mode "default"
  bindsym h exec --no-startup-id ~/.local/bin/i3exit hibernate, exec kill $(pgrep i3-nagbar);mode "default"
  bindsym Shift+r exec --no-startup-id ~/.local/bin/i3exit reboot, exec kill $(pgrep i3-nagbar);mode "default"
  bindsym Shift+s exec --no-startup-id ~/.local/bin/i3exit shutdown, exec kill $(pgrep i3-nagbar);mode "default"

}
bindsym $alt+Shift+e mode "$mode_system" exec "i3-nagbar -m 'System (l) lock, (e) logout, (s) suspend, (h) hibernate, (Shift+r) reboot, (Shift+s) shutdown'"

# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode

# Pressing left will shrink the window’s width.
# Pressing right will grow the window’s width.
# Pressing up will shrink the window’s height.
# Pressing down will grow the window’s height.
  bindsym h resize shrink width  4 px or 4 ppt
  bindsym j resize grow   height 4 px or 4 ppt
  bindsym k resize shrink height 4 px or 4 ppt
  bindsym l resize grow   width  4 px or 4 ppt

# Resize the focused window more
  bindsym Shift+h resize shrink width  6 px or 6 ppt
  bindsym Shift+j resize grow   height 6 px or 6 ppt
  bindsym Shift+k resize shrink height 6 px or 6 ppt
  bindsym Shift+l resize grow   width  6 px or 6 ppt

# same bindings, but for the arrow keys
  bindsym Left  resize shrink width  5 px or 5 ppt
  bindsym Down  resize grow   height 5 px or 5 ppt
  bindsym Up    resize shrink height 5 px or 5 ppt
  bindsym Right resize grow   width  5 px or 5 ppt

# back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym Ctrl+c mode "default"
}

bindsym $alt+r mode "resize"

