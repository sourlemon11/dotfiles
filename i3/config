     bindsym $alt+7 workspace $w7; 
     bindsym $alt+8 workspace $w8; 
     bindsym $alt+9 workspace $w9; 
     bindsym $alt+0 workspace $w10;
     bindsym $alt+Ctrl+l workspace next
     bindsym $alt+Ctrl+h workspace prev
     bindsym $alt+Tab workspace back_and_forth
     bindsym $alt+shift+space scratchpad show 
     # bindsym $sup+period exec "amixer -q sset Master 5%+ unmute"
     # bindsym $sup+comma exec "amixer -q sset Master 5%- unmute"
     # Control pianobar through fifo file ctl
     # bindsym $sup+minus exec "echo '-' > ~/.config/pianobar/ctl"
     # bindsym $sup+equal exec "echo '+' > ~/.config/pianobar/ctl"
     # bindsym $sup+n exec "echo 'n' > ~/.config/pianobar/ctl"
     # bindsym $sup+p exec "echo 'p' > ~/.config/pianobar/ctl"
     bindsym $sup+b exec tmux send-keys -t:1 music pianobar ENTER
     # bindsym $sup+q exec "echo 'q' > ~/.config/pianobar/ctl"
